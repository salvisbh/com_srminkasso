<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="2.5.0" method="upgrade">
	<name>SrmInkasso</name>
	<creationDate>03.08.2014 01:07</creationDate>
	<author>Hanspeter Salvisberg</author>
	<authorEmail>hanspeter.salvisberg@gmx.ch</authorEmail>
	<authorUrl>http://www.srm-murten.ch</authorUrl>
	<version>1.0.0</version>
	<description>SRM Inkassosystem</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.sql</file>
        </sql>
    </install>

	<administration>
        <menu img="components/com_srminkasso/assets/images/srminkasso_s.png">SRM Inkasso</menu>

        <files folder="admin">
            <filename>srminkasso.php</filename>
            <filename>controller.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
	</administration>

    <update>
        <schemas>
            <schemapath type="mysql">sql/updates</schemapath>
        </schemas>
    </update>

</extension>